<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdsDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F4F4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/photo_traning_room"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/home" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:id="@+id/linearlayout_favorite"
                               android:layout_weight="1"
                               android:layout_margin="5dp"
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="left"
                                   android:text="Favorite"
                                   android:textColor="#000"
                                   android:textSize="13sp" />

                               <ImageView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="7dp"
                                   android:src="@drawable/ic_menu_favorite"
                                   android:layout_gravity="center"/>

                           </LinearLayout>

                           <LinearLayout
                               android:id="@+id/linearlayout_report"
                               android:layout_weight="1"
                               android:layout_margin="5dp"
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="right"
                                   android:text="Report"
                                   android:textColor="#EE1707"
                                   android:textSize="13sp" />

                               <ImageView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="7dp"
                                   android:src="@drawable/ic_action_flag"
                                   android:layout_gravity="center"/>

                           </LinearLayout>
                       </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Date"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Today , 22:30"
                                android:textColor="#000"
                                android:textSize="13sp" />

                        </LinearLayout>



                      <LinearLayout
                          android:layout_margin="5dp"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:gravity="left"
                              android:text="Experience Level "
                              android:textColor="#000"
                              android:textSize="13sp" />

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:text="Executive/Director"
                              android:textColor="#000"
                              android:textSize="13sp" />

                      </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Employment"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Part-Time"
                                android:textColor="#000"
                                android:textSize="13sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Education Level"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Bachelor`s Degree"
                                android:textColor="#000"
                                android:textSize="13sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Compensation"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="3,000"
                                android:textColor="#000"
                                android:textSize="13sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Type"
                                android:textColor="#000"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Employer"
                                android:textColor="#000"
                                android:textSize="13sp" />

                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:text="Details : "
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/details_traning_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب مطلوب"
                    android:layout_margin="5dp"
                    android:textColor="#111010"
                    android:textSize="13sp" />

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="احمد"
                android:layout_gravity="center"
                android:textColor="#1A1818"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_all_ads_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:text="all ads of this user"
                android:layout_gravity="center"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:textStyle="normal" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>