<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_side_menu"
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_go_profile_sideMenu"
                android:layout_margin="7dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_navigate_right"/>

            <TextView
                android:id="@+id/tv_go_profile_sideMenu"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffbfbfe"
                android:textSize="17sp"
                android:text="profile"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="22dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/circle_imageview_sideMenu"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_login_sideMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_margin="3dp"
                android:textSize="15sp"
                android:textColor="#9C27B0"/>

            <TextView
                android:id="@+id/tv_register_sideMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:layout_margin="3dp"
                android:textSize="15sp"
                android:textColor="#F44336"/>

            <TextView
                android:id="@+id/tv_name_profile_sideMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:layout_margin="3dp"
                android:textSize="15sp"
                android:textColor="#FFEB3B"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
